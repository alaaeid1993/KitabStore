@model Z_Store.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div class="col-lg-12  align-items-stretch  h-100">
    <div class="blog-entry "style="display:flex">
        <a href="blog-single.html" class="block-20 img" style="background-image: url('@Model.ImageUrl');">
        </a>
        <div class="text p-4 bg-light">
        <div class="meta">
            <p><span class="fa fa-calendar"></span> @Model.DataPblish</p>
        </div>
        <h3 class="heading mb-3"><a href="#">@Model.Title</a></h3>
        <p>@Model.Description</p>
        <h4 class="heading mb-3"><a href="#">@Model.Author</a></h4>
        <p>$@Model.Price</p>
        <p>@Model.Language</p>
        <p>@Model.Ssn</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="index" asp-controller="Book" class="btn btn-warning mt-3"><i class="fa  fa-arrow-left" style="color:blue" ></i></a>
    </form>
</div>
