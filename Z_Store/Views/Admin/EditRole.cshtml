@model Z_Store.ViewModels.EditAdminViewModel


<div class="container ">


<form method="post">
    <div class="form-group col-9">
        <label asp-for="id"></label>
        <input asp-for="id" disabled class="form-controle col-6"/>
    </div>

    <div class="form-group col-9">
        <label asp-for="Name"></label>
        <input asp-for="Name"  class="form-controle col-6"/>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn--green col-3">Edit</button>
        <a asp-action="index"  class="btn btn--blue col-3">Back To List</a>
    </div>

</form>
</div>